// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // look and feel
  // theme
  "theme": {
    "mode": "system",
    "dark": "Nimble Night",
    "light": "Nimble Night"
  },
  // clean the UI
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "left",
    "git_status": false
  },
  "outline_panel": {
    "dock": "left"
  },
  // editor
  "hover_popover_delay": 16,
  "use_autoclose": true,
  "hour_format": "hour24",
  "current_line_highlight": "none",
  "always_treat_brackets_as_autoclosed": true,
  // font style
  "ui_font_size": 16,
  "buffer_font_size": 16,
  // cursor style
  "cursor_blink": false,
  "cursor_shape": "block",
  // base keymap
  "base_keymap": "VSCode",
  // restore on startup
  "restore_on_startup": "last_workspace",

  // files and languages
  // file associations
  "file_types": {
    "TOML": ["nimble"]
  },
  // https://zed.dev/docs/languages/nim
  "languages": {
    "Nim": {
      "tab_size": 2,
      "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
        "background_coloring": "disabled"
      },
      "formatter": {
        "external": {
          "command": "nph",
          "arguments": ["-"]
        }
      }
    }
  },

  // misc
  // telemetry
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  // artificial intelligence
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  }
}
